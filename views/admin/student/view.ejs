<%- include("../header.ejs") %>
 <%- include("../sidebar.ejs") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Display</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Display</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- </div> -->
  <div class="card">
    <button
      type="button"
      class="btn btn-info"
      style="float: left"
      data-toggle="modal"
      data-target="#modal-default"
    >
      Add students
    </button>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>rollno</th>
            <th>phone</th>
            <th>Address</th>
            
            <th>DOB</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= d._id %></td>
              <td><%= d.name %></td>
              <td><%= d.email %></td>
              <td><%= d.rollno %></td>
              <td><%= d.phone %></td>
              <td><%= d.address %></td>
              <td><%= d.dob %></td>
              <td><img src="<%= d.image.url %>" width="50px" alt=""></td>
            </tr>
        </tbody>
        <!-- <tfoot>
          <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Course</th>
                <th>Status</th>
                <th>Comment</th>
                <th></th>
                <th>Action</th>
              </tr>
        </tfoot> -->
      </table>
    </div>
    <!-- /.card-body -->
    <center><a href="/admin/studentdisplay">Back</a></center>
  </div>
  <!-- /.card -->
</div>



<div class="modal fade" id="modal-default">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Add Students</h4>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form
          action="/admin/studentInsert"
          method="post"
          enctype="multipart/form-data"
        >
       
          <div class="form-group">
            <label for="">Student Name</label>
            <input type="text" name="name" class="form-control" value="" />
            <label for="">Email</label>
            <input type="email" name="email" class="form-control" />
            <label for="">Rollno</label>
            <input type="number" name="rollno" class="form-control" />
            <label for="">DOB</label>
            <input type="date" name="dob" class="form-control" />
            <label for="">Phone</label>
            <input type="number" name="phone" class="form-control" />
            <label for="">City</label>
            <input type="text" name="city" class="form-control" />
            <label for="">Address</label>
            <input type="text" name="address" class="form-control" />
            <label for="">Courses</label>
            <input type="text" name="course" class="form-control" />
            <label for="">Images</label>
            <input type="file" name="image" class="form-control" />

          
            <center>
              <button class="btn btn-info" type="submit" style="margin-top: 25px;">Submit</button>
            </center>
            
          </div>
        </form>

      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->

</div>
<!-- /.modal -->
