<%- include("../header.ejs") %>
<%- include("../sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Edit Student Form</h1>
                </div>
                <!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Display</li>
                    </ol>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- </div> -->
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                
                <div class="container">
                    <form
                    action="/admin/studentUpdate/<%= d.id %>" method="post"
                  >
                 
                    <div class="form-group">
                      <label for="">Student Name</label>
                     
                      <input type="text" class="form-control" placeholder="Enter full name" name="name"
                      id="name" required value="<%= d.name %>" />
                      <label for="">Email</label>
                      <input type="email" name="email" class="form-control" placeholder="Enter email" name="email" id="email" value="<%= d.email %>" />
                      <label for="">DOB</label>
                      <input type="date" name="dob" class="form-control" placeholder="Date of birth" id="dob"  value="<%= d.dob %>"/>
                      <label for="">Phone</label>
                      <input type="number" name="phone" class="form-control" placeholder="enter phone number" id="phone" value="<%= d.phone %>" />
                      <label for="">City</label>
                      <input type="text" name="city" class="form-control" placeholder="enter city" id="city" value="<%= d.city %>" />
                      <label for="">Address</label>
                      <input type="text" name="address" class="form-control" placeholder="enter address"  id="address" value="<%= d.address %>"/>
                      <label for="">Courses</label>
                      <input type="text" name="course" class="form-control" placeholder="enter course" id="course" value="<%= d.course %>"/>
                      <label for="">Images</label>
                      <input type="file" name="image" class="form-control" placeholder="images" id="image" value="<%= d.image %>" />
          
                    
                      <center>
                        <button class="btn btn-info" type="submit" style="margin-top: 25px;">Submit</button>
                      </center>
                    </div>
                  </form>

                </div>
                <br />
                <center>
                    <a href="/admin/studentdisplay" class="btn btn-primary">Back</a>
                </center>
                <br />
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
<!-- /.content-wrapperÂ -->

<%- include("../footer.ejs") %>